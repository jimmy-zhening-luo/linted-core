{
  "_schemaVersion": "20.17.3",
  "name": "@eslinted/core",
  "version": "3.4.0-rc.3",
  "description": "Core ESLint flat config factory npm package `linted`.",
  "keywords": [],
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": "github:jimmy-zhening-luo/linted-core",
  "homepage": "https://github.com/jimmy-zhening-luo/linted-core#readme",
  "bugs": "https://github.com/jimmy-zhening-luo/linted-core/issues",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engineStrict": true,
  "engines": {
    "node": ">=20.17.0",
    "npm": ">=10.8.2"
  },
  "peerDependenciesMeta": {},
  "dependencies": {
    "globals": "^15.9.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.2"
  },
  "scripts": {
    "build": "run-s \"build:{1}:*\" lint:built  --  ts",
    "build:ts:compile": "tsc",
    "build:svelte:sync": "svelte-kit sync",
    "build:svelte:check": "svelte-check --tsconfig ./tsconfig.json",
    "build:svelte:compile": "vite build",
    "build:svelte:prelint": "npm run ln src/**/*.svelte || echo \"Svelte prelint step failed.\"",
    "lint": "npm run build",
    "lint:built": "run-s -c lint:built:*",
    "lint:built:configs": "npm run ln --files={*,.github/workflows/*}.{json,jsonc,js,ts,yml}",
    "lint:built:source": "npm run ln --files=src/**/*.{js,ts,html}",
    "ln": "eslint --cache --fix %npm_config_files% || echo \"No linter installed.\"",
    "pretest": "npm run build",
    "test": "",
    "start": "vite preview || node .",
    "prestart": "npm test",
    "prepublishOnly": "npm test",
    "predeploy": "npm test",
    "deploy": ""
  },
  "author": "Jimmy Zhening Luo <1450044+jimmy-zhening-luo@users.noreply.github.com> (https://jimm.my/)"
}
